<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.diarymanager.controller.MainController">

    <top>
        <BorderPane style="-fx-background-color: linear-gradient(to right, #4a90e2, #63b3ed);">
            <left>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
                    <Label text="ðŸ“” Personal Diary Manager" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;">
                        <font>
                            <Font name="Arial" size="24"/>
                        </font>
                    </Label>
                </HBox>
            </left>
            <right>
                <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                    <ToggleButton fx:id="btnThemeToggle" text="ðŸŒ™ Dark Mode" styleClass="theme-toggle"/>
                    <Button fx:id="btnSettings" text="âš™ï¸ Settings" styleClass="nav-button"/>
                </HBox>
            </right>
        </BorderPane>
    </top>

    <left>
        <VBox fx:id="navigationPanel" spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-border-color: #dee2e6; -fx-border-width: 0 1 0 0;">
            <Label text="Navigation" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #495057;"/>
            <Separator/>

            <Button fx:id="btnNewEntry" text="âœï¸ New Entry" styleClass="nav-button" maxWidth="Infinity">
                <tooltip>
                    <Tooltip text="Create a new diary entry (Ctrl+N)"/>
                </tooltip>
            </Button>

            <Button fx:id="btnBrowseEntries" text="ðŸ“‚ Browse Entries" styleClass="nav-button" maxWidth="Infinity">
                <tooltip>
                    <Tooltip text="View all diary entries (Ctrl+B)"/>
                </tooltip>
            </Button>

            <Button fx:id="btnSearch" text="ðŸ” Search" styleClass="nav-button" maxWidth="Infinity">
                <tooltip>
                    <Tooltip text="Search entries (Ctrl+F)"/>
                </tooltip>
            </Button>

            <Region VBox.vgrow="ALWAYS"/>

            <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #e9ecef; -fx-background-radius: 5;">
                <Label text="Quick Stats" style="-fx-font-weight: bold;"/>
                <Label text="Entries: Loading..." fx:id="lblEntryCount"/>
                <Label text="Last entry: --" fx:id="lblLastEntry"/>
            </VBox>
        </VBox>
    </left>

    <center>
        <StackPane>
            <VBox alignment="CENTER" spacing="20">
                <ImageView fitWidth="150" fitHeight="150">
                    <Image url="@../icons/welcome.png"/>
                </ImageView>
                <Label text="Welcome to Your Personal Diary" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                <Label text="Capture your thoughts, memories, and ideas" style="-fx-font-size: 16px; -fx-text-fill: #6c757d;"/>

                <VBox spacing="10" alignment="CENTER" style="-fx-padding: 30; -fx-background-color: #f8f9fa; -fx-background-radius: 10;">
                    <Label text="Get Started:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <HBox spacing="20" alignment="CENTER">
                        <VBox alignment="CENTER" spacing="5">
                            <Button text="New Entry" onAction="#handleNewEntry" styleClass="welcome-button"/>
                            <Label text="Start writing" style="-fx-text-fill: #6c757d;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5">
                            <Button text="Browse" onAction="#handleBrowse" styleClass="welcome-button"/>
                            <Label text="Read past entries" style="-fx-text-fill: #6c757d;"/>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <BorderPane style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;">
            <left>
                <Label fx:id="lblStatus" text="Ready" style="-fx-padding: 10;"/>
            </left>
            <right>
                <Label text="Personal Diary Manager v1.0" style="-fx-padding: 10; -fx-text-fill: #6c757d;"/>
            </right>
        </BorderPane>
    </bottom>

</BorderPane>